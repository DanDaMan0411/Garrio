<h2 class =  "page-header">Edit Profile</h2>

<form method = "post" action = "/">
	<div class="form-group">
		<label>Bio</label>
		<input id = "update_bio_text" type="text" class="form-control" name="bio">
		<label>Change Profile Pic</label>
		<select name = "profile_pic_selector">
			<option data-img-src="/profile_pics/pic1.jpg" value="pic1.jpg">Default</option>
			<option data-img-src="/profile_pics/pic2.jpg" value="pic2.jpg">Flower</option>
			<option data-img-src="/profile_pics/pic3.jpg" value="pic3.jpg">Abstract1</option>
			<option data-img-src="/profile_pics/pic4.jpg" value="pic4.jpg">Abstract2</option>
		</select>
		<button type="submit" class="btn btn-default">Update</button>
	</div>
</form>

<script>
	updateBio("{{ bio }}");
	updateProfilePic("{{ profile_pic }}");
	
	//This activates cool looking image selector
	$("select").imagepicker();
</script>
